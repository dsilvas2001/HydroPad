{
  "hosting": [
    {
      "target": "hydropad",
      "public": "dist/hydropad",
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**"
      ],
      "rewrites": [
        {
          "source": "**",
          "destination": "/index.html"
        }
      ]
    },
    {
      "target": "HYDROPAD",
      "source": ".",
      "frameworksBackend": {}
    }
  ],
  "emulators": {
    "auth": {
      "port": 9099
    },
    "firestore": {
      "port": 9098
    },
    "hosting": {
      "port": 9097
    },
    "ui": {
      "enabled": true,
      "port": 9096
    },
    "singleProjectMode": true
  }
}